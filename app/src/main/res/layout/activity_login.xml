<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity"
    android:background="#5956E9"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellcome \n back"
            android:textSize="65sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="32sp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_helloscreen">
        <TextView
            android:id="@+id/tvLogin"
            android:textSize="20sp"
            android:layout_marginTop="82dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratbold"
            android:layout_gravity="center"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="2"
            />

        <LinearLayout
            android:id="@+id/lnEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gmail"/>
            <TextView
                android:fontFamily="@font/ralewaymedium"
                android:layout_marginStart="13.77dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="center"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            />
        <LinearLayout
            android:id="@+id/lnPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pass"/>
            <TextView
                android:fontFamily="@font/ralewaymedium"
                android:layout_marginStart="13.77dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_gravity="center"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Forgot password ?"/>
        <Button
            android:onClick="setBtnLogin"
            android:id="@+id/btnLogin"
            android:textAllCaps="false"
            android:layout_width="314sp"
            android:layout_height="70sp"
            android:background="#5956E9"
            android:fontFamily="@font/montserratbold"
            android:textSize="20dp"
            android:text="Login"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvCreate"
            android:onClick="setTvCreate"
            android:fontFamily="@font/ralewaymedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textColor="#5956E9"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>