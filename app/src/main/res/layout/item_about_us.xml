<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_slide"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rosi" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Huỳnh Hồng Vỹ" />

        <TextView
            android:id="@+id/item_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 19" />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Long An" />

        <TextView
            android:id="@+id/item_spe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialized: Mobile Developer" />

        <TextView
            android:id="@+id/item_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group: 2" />

        <Button
            android:id="@+id/btnFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_custom_blue10rd"
            android:padding="12dp"
            android:text="See on Facebook"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>